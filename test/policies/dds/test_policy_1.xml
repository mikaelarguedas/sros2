<?xml version="1.0" encoding="UTF-8"?>
<policy version="1.0.0">
  <profiles>
    <profile ns="/" node="talker">
      <topics publish="ALLOW" >
        <topic>chatter</topic>
      </topics>
    </profile>
    <profile ns="/" node="listener">
      <topics subscribe="ALLOW">
        <topic>chatter</topic>
      </topics>
    </profile>
    <profile ns="/" node="add_two_ints_server">
      <services reply="ALLOW">
        <service>add_two_ints</service>
      </services>
    </profile>
    <profile ns="/" node="add_two_ints_client">
      <services request="ALLOW">
        <service>add_two_ints</service>
      </services>
    </profile>
    <profile ns="/" node="fibonacci_server">
      <actions execute="ALLOW">
        <action>fibonacci</action>
      </actions>
    </profile>
    <profile ns="/" node="fibonacci_client">
      <actions call="ALLOW">
        <action>fibonacci</action>
      </actions>
    </profile>
    <profile ns="/foo/bar" node="Alice">
      <topics publish="ALLOW">
        <topic>/chatter</topic>
        <topic>/foo/chatter</topic>
        <topic>chatter</topic>
        <topic>baz/chatter</topic>
      </topics>
    </profile>
    <profile ns="/foo/bar/" node="Bob">
      <topics publish="DENY" subscribe="ALLOW">
        <topic>/chatter</topic>
        <topic>/foo/chatter</topic>
        <topic>chatter</topic>
        <topic>baz/chatter</topic>
      </topics>
    </profile>
    <profile ns="/foo/bar/" node="Eve">
      <topics publish="DENY" subscribe="DENY">
        <topic>/chatter</topic>
        <topic>/foo/chatter</topic>
        <topic>chatter</topic>
        <topic>baz/chatter</topic>
      </topics>
    </profile>
    <profile ns="/foo/bar/" node="Trent">
      <topics publish="ALLOW" subscribe="ALLOW">
        <topic>/*</topic>
        <topic>/foo/*</topic>
        <topic>*</topic>
        <topic>baz/*</topic>
      </topics>
    </profile>
    <profile ns="/foo/bar" node="Frank">
      <services reply="ALLOW" request="ALLOW">
        <service>/add_two_ints</service>
        <service>/foo/add_two_ints</service>
        <service>add_two_ints</service>
        <service>baz/add_two_ints</service>
      </services>
    </profile>
    <profile ns="/foo/bar" node="Judy">
      <actions execute="ALLOW" call="ALLOW">
        <action>/fibonacci</action>
        <action>/foo/fibonacci</action>
        <action>fibonacci</action>
        <action>baz/fibonacci</action>
      </actions>
    </profile>
  </profiles>
</policy>
